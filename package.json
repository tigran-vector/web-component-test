{
  "name": "web-component-demo",
  "version": "1.0.0",
  "license": "MIT",
  "description": "An web component",
  "author": {
    "name": "Tigran Saakyan",
    "email": "tigraqwerty@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tigran-vector/web-component-test"
  },
  "scripts": {
    "build:dev": "npm run clear && webpack --mode=development",
    "build:prod": "npm run clear && webpack --mode=production",
    "start": "webpack-dev-server --open",
    "clear": "rm -rf ./dist"
  },
  "devDependencies": {
    "file-loader": "^6.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "prettier": {
    "printWidth": 170,
    "tab-width": 2,
    "useTabs": true,
    "javascript": {
      "singleQuote": true,
      "parser": "babel-flow"
    },
    "fileExtensions": {
      ".foo": "javascript"
    },
    "ignore": [
      "*.html",
      "/legacy/",
      {
        "include": "./.gitignore"
      },
      "!*.config.js"
    ]
  }
}